<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".company.CompanyPersonalDetailsActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/icon_down"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/arrow_left"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/personal_details"
                    android:textSize="18sp"
                    android:textColor="#222741"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="60dp"
                    android:fontFamily="@font/manrope"
                    android:textFontWeight="700"
                    tools:targetApi="p" />

            </RelativeLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/profile_img"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                />

            <TextView
                android:id="@+id/change_profile_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/change_profile_picture"
                android:textSize="14sp"
                android:textColor="#2355C4"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:fontFamily="@font/manrope"
                android:textFontWeight="600"
                tools:targetApi="p" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/edit_profile_bg"
                android:paddingVertical="15dp"
                android:paddingHorizontal="15dp"
                >

                <EditText
                    android:id="@+id/profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/name"
                    android:textSize="14sp"
                    android:textColorHint="#222741"
                    android:layout_gravity="center"
                    android:fontFamily="@font/manrope"
                    android:textFontWeight="500"
                    android:letterSpacing="0.1"
                    android:background="@drawable/custom_hide_line"
                    tools:targetApi="p" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_profile_bg"
                android:paddingVertical="15dp"
                android:paddingHorizontal="15dp"
                >

                <EditText
                    android:id="@+id/profile_mail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/email"
                    android:textSize="14sp"
                    android:textColorHint="#222741"
                    android:layout_gravity="center"
                    android:fontFamily="@font/manrope"
                    android:textFontWeight="500"
                    android:letterSpacing="0.1"
                    android:background="@drawable/custom_hide_line"
                    tools:targetApi="p" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_profile_bg"
                android:paddingVertical="15dp"
                android:paddingHorizontal="15dp"
                >

                <EditText
                    android:id="@+id/website_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/website_link"
                    android:textSize="14sp"
                    android:textColorHint="#222741"
                    android:layout_gravity="center"
                    android:fontFamily="@font/manrope"
                    android:textFontWeight="500"
                    android:letterSpacing="0.1"
                    android:background="@drawable/custom_hide_line"
                    tools:targetApi="p" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_profile_bg"
                android:paddingVertical="15dp"
                android:paddingHorizontal="15dp"
                >

                <EditText
                    android:id="@+id/employees"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/employees_eg_1000"
                    android:textSize="14sp"
                    android:textColorHint="#222741"
                    android:layout_gravity="center"
                    android:fontFamily="@font/manrope"
                    android:textFontWeight="500"
                    android:letterSpacing="0.1"
                    android:background="@drawable/custom_hide_line"
                    tools:targetApi="p" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_profile_bg"
                android:paddingVertical="15dp"
                android:paddingHorizontal="15dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/location"
                    android:textStyle="bold"
                    android:textColor="#222741"
                    android:textSize="14sp"/>

                <EditText
                    android:id="@+id/profile_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/_4517_washington_ave_manchester_kentucky_39495"
                    android:textSize="14sp"
                    android:layout_marginTop="20dp"
                    android:textColorHint="#222741"
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/manrope"
                    android:textFontWeight="500"
                    android:letterSpacing="0.1"
                    android:background="@drawable/custom_hide_line"
                    tools:targetApi="p" />

            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/save"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/save"
                android:textColor="@color/white"
                android:fontFamily="@font/manrope"
                android:textSize="16sp"
                android:textFontWeight="600"
                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_button"
                android:textAllCaps="false"
                android:layout_marginTop="100dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                tools:targetApi="p"
                />

        </LinearLayout>


</ScrollView>