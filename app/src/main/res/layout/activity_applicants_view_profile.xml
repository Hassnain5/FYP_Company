<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".viewapplicants.ApplicantsViewProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <!-- Top section with blue background -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:orientation="vertical"
                android:layout_marginTop="-20dp"
                android:background="@drawable/rounded_liblue_layout"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/welcome_background">

                    <ImageView
                        android:id="@+id/icon_down"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="15dp"
                        android:src="@drawable/arrow_left" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:background="@drawable/circle_image_background"
                android:backgroundTint="@color/white"
                android:padding="8dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/profile_img"
                    android:layout_gravity="center"
                    />

            </LinearLayout>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <!-- Job Title -->
            <TextView
                android:id="@+id/job_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:textColor="#222741"
                android:gravity="center"
                android:textAlignment="center"/>

            <!-- Company and Location -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ratings_100"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ratings_100"
                    android:textSize="14sp"
                    android:fontFamily="@font/manrope"
                    android:textColor="@color/LightText2"
                    android:textAlignment="center"/>

                <ImageView
                    android:id="@+id/yellow_star"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/star" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/edit_profile_bg"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:padding="15dp"
            android:elevation="3dp">

            <TextView
                android:id="@+id/view_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/view_profile"
                android:textSize="16sp"
                android:textColor="#222741"
                android:fontFamily="@font/manrope"
                android:textFontWeight="600"
                tools:ignore="UnusedAttribute" />

            <TextView
                android:id="@+id/cv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cv"
                android:textSize="14sp"
                android:textColor="#75788D"
                android:fontFamily="@font/manrope"
                android:textFontWeight="600"
                tools:ignore="UnusedAttribute" />

            <TextView
                android:id="@+id/education"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/education"
                android:textSize="14sp"
                android:textColor="#75788D"
                android:fontFamily="@font/manrope"
                android:textFontWeight="600"
                tools:ignore="UnusedAttribute" />

            <TextView
                android:id="@+id/experience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/experience"
                android:textSize="14sp"
                android:textColor="#75788D"
                android:fontFamily="@font/manrope"
                android:textFontWeight="600"
                tools:ignore="UnusedAttribute" />

        </LinearLayout>



        <Button
            android:id="@+id/hire"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:text="@string/hire"/>

        <RelativeLayout
            android:id="@+id/reject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_strock_bg"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
            android:paddingVertical="15dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reject"
                android:textSize="16sp"
                android:layout_centerInParent="true"
                android:textColor="#D33415"
                android:fontFamily="@font/manrope"
                android:textFontWeight="700"
                tools:targetApi="p" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>