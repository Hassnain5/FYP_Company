<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@color/GrayBG"
    tools:context=".API.AiSuggestionActivity">

    <!-- Lottie Animation -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimation"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginBottom="24dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/searching_animation" /> <!-- Replace with your Lottie file -->

    <!-- Title Text -->
    <TextView
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AI-Powered Matching"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:textColor="@color/black" />

    <!-- Description Text -->
    <TextView
        android:id="@+id/description_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="We'll automatically match your job requirements with applicants' skills using AI and recommend the best suitable candidates for this position."
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="32dp"
        android:textColor="@color/LightText" />

    <!-- Proceed Button -->
    <Button
        android:id="@+id/proceed_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Matching"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:backgroundTint="@color/blue500"
        android:layout_marginTop="16dp"
    android:paddingVertical="12dp"
    android:elevation="4dp" />

</LinearLayout>