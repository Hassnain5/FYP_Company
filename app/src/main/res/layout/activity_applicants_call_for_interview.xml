<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".viewapplicants.ApplicantsCallForInterviewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <!-- Top section with blue background -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:orientation="vertical"
                android:layout_marginTop="-20dp"
                android:background="@drawable/rounded_liblue_layout"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/welcome_background">

                    <ImageView
                        android:id="@+id/icon_down"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="15dp"
                        android:src="@drawable/arrow_left" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:background="@drawable/circle_image_background"
                android:backgroundTint="@color/white"
                android:padding="8dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/profile_img"
                    android:layout_gravity="center"
                    />

            </LinearLayout>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <!-- Job Title -->
            <TextView
                android:id="@+id/job_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:textColor="#222741"
                android:gravity="center"
                android:textAlignment="center"/>

            <!-- Company and Location -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ratings_100"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ratings_100"
                    android:textSize="14sp"
                    android:fontFamily="@font/manrope"
                    android:textColor="@color/LightText2"
                    android:textAlignment="center"/>

                <ImageView
                    android:id="@+id/yellow_star"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/star" />

            </LinearLayout>

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/davidrichard_gmail_com"
                android:textSize="14sp"
                android:fontFamily="@font/manrope"
                android:textColor="@color/LightText2"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status_shortlisted"
                android:textSize="14sp"
                android:fontFamily="@font/manrope"
                android:textColor="@color/LightText2"
                android:textAlignment="center"/>

        </LinearLayout>

        <TextView
            android:id="@+id/call_for_interview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/write_email_to_call_for_interview"
            android:textSize="14sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:textStyle="bold"
            android:textColor="#222741"
            />

        <TextView
            android:id="@+id/job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/manrope"
            />

        <RelativeLayout
            android:id="@+id/enter_job_type"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="15dp"
            android:background="@drawable/edit_profile_bg"
            >

            <EditText
                android:id="@+id/job_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColorHint="#75788D"
                android:layout_marginTop="13dp"
                android:fontFamily="@font/manrope"
                android:textFontWeight="500"
                android:letterSpacing="0.1"
                android:background="@drawable/custom_hide_line"
                tools:targetApi="p" />

        </RelativeLayout>

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/manrope"
            />

        <RelativeLayout
            android:id="@+id/enter_job_description"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="15dp"
            android:background="@drawable/edit_profile_bg"
            >

            <EditText
                android:id="@+id/job_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColorHint="#75788D"
                android:layout_marginTop="13dp"
                android:fontFamily="@font/manrope"
                android:textFontWeight="500"
                android:letterSpacing="0.1"
                android:background="@drawable/custom_hide_line"
                tools:targetApi="p" />

        </RelativeLayout>

        <Button
            android:id="@+id/call_interview"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:text="@string/call_for_interview"/>

        <RelativeLayout
            android:id="@+id/reject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_strock_bg"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
            android:paddingVertical="15dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reject"
                android:textSize="16sp"
                android:layout_centerInParent="true"
                android:textColor="#D33415"
                android:fontFamily="@font/manrope"
                android:textFontWeight="700"
                tools:targetApi="p" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>