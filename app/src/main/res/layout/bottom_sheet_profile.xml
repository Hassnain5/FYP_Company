<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_bg"
    android:id="@+id/container">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/on_site_remote"
            android:textSize="16sp"
            android:textColor="#222741"
            android:layout_marginTop="20dp"
            android:layout_centerInParent="true"
            android:fontFamily="@font/manrope"
            android:textFontWeight="700"
            tools:targetApi="p" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/delete"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            app:tint="#ACAEBE"/>

    </RelativeLayout>

    <Button
        android:id="@+id/no_stay_logged_in"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/no_stay_logged_in"
        android:textColor="@color/white"
        android:fontFamily="@font/manrope"
        android:textSize="16sp"
        android:textFontWeight="600"
        android:backgroundTint="#2355C4"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        tools:targetApi="p"
        />

    <RelativeLayout
        android:id="@+id/yes_log_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_strock_bg"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:paddingVertical="15dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yes_log_out"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:textColor="#D33415"
            android:fontFamily="@font/manrope"
            android:textFontWeight="700"
            tools:targetApi="p" />

    </RelativeLayout>

</LinearLayout>